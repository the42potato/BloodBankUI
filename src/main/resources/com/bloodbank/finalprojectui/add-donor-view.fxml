<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bloodbank.finalprojectui.AddDonorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane alignment="CENTER" hgap="5" vgap="10">
        <Text text="Name:"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Age:"
              GridPane.columnIndex="0" GridPane.rowIndex="1"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Weight:"
              GridPane.columnIndex="0" GridPane.rowIndex="2"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Gender:"
              GridPane.columnIndex="0" GridPane.rowIndex="3"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Blood Type:"
              GridPane.columnIndex="0" GridPane.rowIndex="4"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Phone #:"
              GridPane.columnIndex="0" GridPane.rowIndex="5"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Blood Iron:"
              GridPane.columnIndex="0" GridPane.rowIndex="6"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Text text="Hemoglobin:"
              GridPane.columnIndex="0" GridPane.rowIndex="7"
              GridPane.columnSpan="1" GridPane.rowSpan="1"/>

        <TextField fx:id="name"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="age"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="weight"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="gender"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="bloodType"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="phoneNum"
                   GridPane.columnIndex="1" GridPane.rowIndex="5"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="bloodIron"
                   GridPane.columnIndex="1" GridPane.rowIndex="6"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <TextField fx:id="hemoglobin"
                   GridPane.columnIndex="1" GridPane.rowIndex="7"
                   GridPane.columnSpan="1" GridPane.rowSpan="1"/>
        <Button GridPane.columnIndex="0" GridPane.rowIndex="8"
                GridPane.columnSpan="1" GridPane.rowSpan="1"
                text="Back" onAction="#onBackButtonClick"/>
        <Button text="Submit" onAction="#onSubmitButtonClick"
                GridPane.columnIndex="1" GridPane.rowIndex="8"
                GridPane.columnSpan="1" GridPane.rowSpan="1"/>
    </GridPane>
</VBox>
